class Solution{
		

	public:
	int minOperations(string str1, string str2) 
	{ 
	    // Your code goes here
	    int m=str1.length(),n=str2.length();
	    int **dp=new int *[m+1];
	    for(int i=0;i<=m;i++)
	    dp[i]=new int[n+1];
	    
	    for(int i=0;i<=m;i++)
	    {
	        for(int j=0;j<=n;j++)
	        {
	            if(!i||!j)
	            dp[i][j]=0;
	            else
	            if(str1[i-1]==str2[j-1])
	            dp[i][j]=1+dp[i-1][j-1];
	            else
	            dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
	        }
	    }
	    return m+n-(2*dp[m][n]);
	} 
};
